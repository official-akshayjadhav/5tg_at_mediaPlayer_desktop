xmlns:tempLocal="clr-namespace:_5tg_at_mediaPlayer_desktop.connection"
             mc:Ignorable="d" 
			 Background="AliceBlue"
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
